<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:background="#00B858">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/fcminimalregular"
        android:text="Management Orders "
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="134dp"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView12"
        app:srcCompat="@drawable/tabseven" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/fcminimalregular"
            android:paddingLeft="50dp"
            android:text="To Ship"
            android:textColor="#00B858"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/fcminimalregular"
            android:paddingLeft="50dp"
            android:text="Complete"
            android:textSize="30dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        android:background="#f2f2f2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="344dp"
                android:layout_height="240dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/boxadmin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/bgtextadmin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_marginLeft="30dp"
                        android:id="@+id/imageView3"
                        android:layout_width="38dp"
                        android:layout_height="34dp"
                        app:srcCompat="@drawable/r" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Robot ID : "
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/fcminimalregular"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/ID_robot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 1"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/fcminimalregular"
                        android:textSize="30sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">


                    <LinearLayout
                        android:id="@+id/box1"
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:background="@drawable/bgboxa"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Box 1"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/text_Order_ID_box_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="23sp"/>

                        <TextView
                            android:id="@+id/status_box_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preparing"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="#767171"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/box2"
                        android:layout_width="170dp"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:background="@drawable/bgboxb">
                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Box 2"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="30sp"/>

                        <TextView
                            android:id="@+id/text_Order_ID_box_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order ID"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="23sp"/>

                        <TextView
                            android:id="@+id/status_box_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preparing"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/fcminimalregular"
                            android:textColor="#767171"
                            android:textStyle="bold"
                            android:textSize="20sp"/>
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Confirm to Delivery"
                    app:backgroundTint="#00C853"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/fcminimalregular"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>